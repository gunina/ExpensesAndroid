<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/creating_entry"
    android:weightSum="1">

    <EditText
        android:id="@+id/new_entry_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginStart="20sp"
        android:ems="10"
        android:inputType="text"
        android:maxLength="30" />

    <EditText
        android:id="@+id/new_entry_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_alignBaseline="@+id/new_entry_subject"
        android:layout_alignBottom="@+id/new_entry_subject"
        android:layout_toRightOf="@+id/new_entry_subject"
        android:ems="5"
        android:inputType="numberDecimal"
        android:maxLength="30"
        android:textAlignment="textEnd"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic" />

    <Spinner
        android:id="@+id/category_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="30sp"
        android:layout_marginEnd="30sp"
        android:inputType="numberDecimal"
        android:textAlignment="textEnd"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic"
        android:layout_below="@+id/new_entry_subject"
        />

</RelativeLayout>